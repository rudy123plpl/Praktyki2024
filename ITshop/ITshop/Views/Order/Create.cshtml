@model OrderViewModel

@{
        ViewBag.Title = "Create Order";
}

<h1>Create Order</h1>

<div class="row">
    @foreach (Device device in @Model.Devices)
    {
        <div class="col-md-4">
            <form asp-action="AddItem" method="post">
                <div class="card" style="width: 18rem;">
                    <img src="@Url.Content("~/images/" + device?.ImageUrl)" class="card-img-top fixed-image-height" alt="@device.Description">
                    <div class="card-body">
                        @device.Name - @device.Price.ToString("C")
                        <input type="hidden" value="@device.DeviceId" name="prodId" />
                        <input type="number" name="prodQty" class="form-control" />
                        <button class="btn btn-info" type="submit">Add</button>
                    </div>
                </div>
            </form>
        </div>
    }
</div>